<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    // style for toolbar and hamburger icon
    <style name="ToolBarTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    //

    <style name="TitleTextView">
        <item name="android:fontFamily">@font/neuzeit_bold</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EditTextStyle" parent="TitleTextView">
        <item name="android:fontFamily">@font/neuzeit</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

</resources>
