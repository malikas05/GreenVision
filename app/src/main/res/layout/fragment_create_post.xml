<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/createPostImage"
        android:layout_width="200dp"
        android:layout_height="250dp"
        />

    <Button
        android:id="@+id/createPostTakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/createPostImage"
        android:text="Take photo"/>

    <Button
        android:id="@+id/createPostChoosePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/createPostImage"
        android:layout_below="@id/createPostTakePhoto"
        android:text="Choose photo"/>

    <EditText
        android:id="@+id/createPostLocationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/createPostImage"
        android:text="14 York Street, Toronto, ON" />

    <Button
        android:id="@+id/createPostLocationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/createPostLocationText"
        android:layout_below="@id/createPostImage"
        android:text="Loc"/>

    <EditText
        android:id="@+id/createPostTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createPostLocationText"
        android:text="" />

    <EditText
        android:id="@+id/createPostDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createPostTitle"
        android:text="This is the description for the post This is the description for the post This is the description for the postThis is the description for the postThis is the description for the post" />

    <Button
        android:id="@+id/createPostSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/createPostDesc"
        android:text="Submit"/>

</RelativeLayout>