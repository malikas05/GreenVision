<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <include layout="@layout/tool_bar_create_post" android:id="@+id/tool_bar"/>

    <ImageView
        android:id="@+id/createPostImage"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/createPostTakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tool_bar"
        android:background="@drawable/take_photo"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        />

    <ImageButton
        android:id="@+id/createPostChoosePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tool_bar"
        android:background="@drawable/gallery"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/createPostTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/createPostTakePhoto"
        android:background="@drawable/edittext_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:hint="Title"
        style="@style/EditTextStyle"
        android:text="" />

    <EditText
        android:id="@+id/createPostDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/createPostTitle"
        android:background="@drawable/edittext_long_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:hint="Description"
        android:inputType="textMultiLine"
        style="@style/EditTextStyle"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/createPostDesc">

    <EditText
        android:id="@+id/createPostLocationText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:background="@drawable/edittext_bg"
        android:layout_marginRight="10dp"
        android:hint="Location"
        style="@style/EditTextStyle"
        android:text="" />

    <ImageButton
        android:id="@+id/createPostLocationBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/loc_icon"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        />

    </LinearLayout>

</RelativeLayout>